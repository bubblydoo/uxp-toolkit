  },
  "homepage": "https://github.com/bubblydoo/uxp-toolkit/tree/main/packages/uxp-polyfills",
  "scripts": {
    "build": "tsup src/index.js --format esm --outDir dist --target chrome80 && cp src/index.d.ts dist/index.d.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "mutationobserver-shim": "^0.3.7",
    "matchmedia-polyfill": "^0.3.2",
    "core-js": "^3.48.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}