{
  "name": "@bubblydoo/uxp-test-framework",
  "type": "module",
  "version": "0.0.10",
  "author": "Hans Otto Wirtz <hansottowirtz@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/bubblydoo/uxp-toolkit/tree/main/packages/uxp-test-framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/bubblydoo/uxp-toolkit.git"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./package.json": "./package.json",
    "./uxp-tests-json-schema.json": "./uxp-tests-json-schema.json"
  },
  "bin": {
    "uxp-test": "bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --outDir dist",
    "typecheck": "tsc --noEmit",
    "docs-json": "typedoc --json docs.json"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./package.json": "./package.json"
    }
  },
  "dependencies": {
    "@bubblydoo/uxp-test-framework-base": "workspace:*",
    "@bubblydoo/uxp-test-framework-plugin": "workspace:*"
  },
  "devDependencies": {
    "@bubblydoo/tsconfig": "workspace:^",
    "@types/node": "^20.8.7",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3",
    "vite": "^6.4.1"
  }
}
