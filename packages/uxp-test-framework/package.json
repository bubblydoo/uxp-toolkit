      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./package.json": "./package.json"
    }
  },
  "dependencies": {
    "arg": "^5.0.2",
    "vite": "^7.3.1",
    "@bubblydoo/uxp-test-framework-base": "workspace:*",
    "@bubblydoo/uxp-test-framework-plugin": "workspace:*",
    "zod": "^4.3.6"
